{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "short_name": "QR Generator",
  "version": "1.0",
  "description": "Aplikasi untuk menghasilkan QR Code.",
  "start_url": "index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "icons": [
    {
      "src": "icon/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon/icon-192x192.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "activeTab"
  ]
}
